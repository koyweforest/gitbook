          },
          "name": {
            "type": "string",
            "example": "Peso Chileno"
          },
          "symbol": {
            "type": "string",
            "example": "CLP"
          },
          "decimals": {
            "type": "integer",
            "format": "int32",
            "example": 0
          },
          "currencies": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Currency_currencies"
            }
          }
        }
      },
